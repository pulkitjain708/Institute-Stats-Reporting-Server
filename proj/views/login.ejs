<div class="blue lighten-3">
  <% if(errors) {%> <%for(i=0;i<errors.length;i++){%>
  <div class="chip">
    <%-errors[i]%>
    <i class="close material-icons">close</i>
  </div>
  <%}%> <%}%>
  <div style="margin:0;" class="row center">
    <div class="col s6 offset-s3">
      <div class="card-panel white">
        <span>
          <h4>Login Into Your Account</h4>
          <form method="post" action="/admin/postUser">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input id="email" type="email" name="email" class="validate" />
                <label for="email">Email</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <input id="password" type="password" name="password" class="validate" />
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <button class="left-align btn waves-effect waves-light" type="submit" name="action">
                  LogIn
                  <i class="material-icons right">send</i>
                </button>
              </div>
              <div class="switch col">
                <label>
                  User
                  <input name="utype" type="checkbox" />
                  <span class="lever"></span>
                  Admin
                </label>
              </div>
            </div>
          </form>
        </span>
      </div>
    </div>
  </div>
</div>