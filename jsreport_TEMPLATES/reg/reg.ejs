<html>
    <head>
        <title>LOLL</title>
        <style>
            table, th, td {
  border: 1px solid black;
}
        </style>
   <script src="http://localhost:8000/libs/chart.js"></script>
    </head>
    <body>
    <br>
    <br>
    <center><h3>Registrations in Different Courses</h3>
    <h2 id="date"></h2>
    </center>
        <div style="height:500;width:900">
       <canvas id="chart">
       </div>
       <table>
           <tr>
               <th>Course</th>
               <th>Registered</th>
               </tr>
       <%for(i=0;i<data.length;i++){%>
           <tr>
               <td><%-data[i].name%></td>
               <td><%-data[i].count%></td>
            </tr>
           <%}%> 
           </table>
         <p id='str'><%-toJSON(data)%></p>
           <script>
             let date=new Date()
               document.getElementById("date").innerText="Report Generated on "+date.getFullYear()+"/"+(date.getMonth()+1)+"/"+date.getDate()
            var data=JSON.parse(document.getElementById('str').innerText)
var ctx = document.getElementById('chart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: data.map(o=>o.name),
        datasets: [{
            label: 'Registered Students',
            data: data.map(o=>Number(o.count)),
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
           </script>
    </body>
</html>